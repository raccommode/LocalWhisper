{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/.vscode/tauri.conf.schema.json",
  "productName": "LocalWhisper",
  "version": "0.1.0",
  "identifier": "com.localwhisper.desktop",
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LocalWhisper",
        "width": 650,
        "height": 550,
        "visible": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "infoPlist": "Info.plist"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "UPDATER_PUBKEY_PLACEHOLDER",
      "endpoints": [
        "https://github.com/YOUR_USERNAME/LocalWhisper/releases/latest/download/latest.json"
      ]
    }
  }
}
